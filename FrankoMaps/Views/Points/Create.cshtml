@model FrankoMaps.Models.PointViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center">
	<div class="col-md-4">
		<h1>Create new point</h1>
		<hr />
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="MapId" class="control-label"></label>
				<input asp-for="MapId" class="form-control" />
				<span asp-validation-for="MapId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="X" class="control-label"></label>
				<input asp-for="X" class="form-control" />
				<span asp-validation-for="X" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Y" class="control-label"></label>
				<input asp-for="Y" class="form-control" />
				<span asp-validation-for="Y" class="text-danger"></span>
			</div>
			<div class="form-group form-check">
				<label class="form-check-label">
					<input class="form-check-input" checked="checked" asp-for="IsVisible" /> @Html.DisplayNameFor(model => model.IsVisible)
				</label>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary btn-block" />
			</div>
		</form>
		<div>
			<a asp-controller="Maps" asp-action="Index">Back</a>
		</div>
	</div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
