@model FrankoMaps.Models.DistanceViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
	<div class="col-md-4">
		<h1>Edit distance</h1>
		<hr />
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="FromPointId" class="control-label"></label>
				<input asp-for="FromPointId" class="form-control" />
				<span asp-validation-for="FromPointId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ToPointId" class="control-label"></label>
				<input asp-for="ToPointId" class="form-control" />
				<span asp-validation-for="ToPointId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Weight" class="control-label"></label>
				<input asp-for="Weight" class="form-control" />
				<span asp-validation-for="Weight" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary btn-block" />
			</div>
		</form>
		<div>
			<a asp-action="Index">Back</a>
		</div>
	</div>
</div>



