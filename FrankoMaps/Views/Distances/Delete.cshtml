@model FrankoMaps.Models.DistanceViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
	<div class="col-md-6">
		<h2>Are you sure you want to delete this?</h2>
		<hr />
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Id)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Id)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.FromPointId)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.FromPointId)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.ToPointId)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.ToPointId)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Weight)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Weight)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.UserId)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.UserId)
			</dd>
		</dl>
		<form asp-controller="Distances" asp-action="Delete">
			<input type="submit" value="Confirm" class="btn btn-danger btn-block" />
		</form>
		<a asp-action="Manage" asp-controller="Home">Back</a>
	</div>
</div>
