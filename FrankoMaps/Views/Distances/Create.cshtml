@model FrankoMaps.Models.JoinViewModel

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
	<div class="col-md-4">
		<h1>Create distance</h1>
		<hr />
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="FromPointId" class="control-label"></label>
				<input asp-for="FromPointId" class="form-control" />
				<span asp-validation-for="FromPointId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="ToPointId" class="control-label"></label>
				<input asp-for="ToPointId" class="form-control" />
				<span asp-validation-for="ToPointId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Weight" class="control-label"></label>
				<input asp-for="Weight" class="form-control" />
				<span asp-validation-for="Weight" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary btn-block" />
			</div>
		</form>
		<div>
			<a asp-action="Manage" asp-controller="Home">Back to List</a>
		</div>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
